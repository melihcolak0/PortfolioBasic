@model ToDoList
@{
    ViewData["Title"] = "UpdateToDoList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="container-fluid">
    <h4 class="page-title">Yapılacaklar</h4>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <div class="card-title">Yapılacak İşlemi Güncelle</div>
                </div>
                <div class="card-body">
                    <form method="post">
                        <input type="hidden" class="form-control" asp-for="ToDoListId">
                        <div class="form-group">
                            <label>Başlık</label>
                            <input type="text" class="form-control" asp-for="Title">
                        </div>
                        <div class="form-group">
                            <label>Resim Url</label>
                            <input type="text" class="form-control" asp-for="ImageUrl">
                        </div>
                        <div class="form-group">
                            <label>Tarih</label>
                            <input type="date" class="form-control" asp-for="Date">
                        </div>
                        <div class="form-group">
                            <button class="btn btn-primary">Güncelle</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>