@model List<Feature>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="container-fluid">
    <h4 class="page-title">Öne Çıkanlar</h4>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <div class="card-title">Öne Çıkan Bölümleri'nin Listelenmesi</div>
                </div>
                <div class="card-body">
                    <table class="table mt-3">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Başlık</th>
                                <th scope="col">Açıklama</th>
                                <th scope="col">Sil</th>
                                <th scope="col">Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.FeatureId</td>
                                    <td>@item.Title</td>
                                    <td>@item.Description</td>
                                    <td><a href="/AdminFeature/DeleteFeature/@item.FeatureId" class="btn btn-danger"> Sil</a></td>
                                    <td><a href="/AdminFeature/UpdateFeature/@item.FeatureId" class="btn btn-warning"> Güncelle</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a href="/AdminFeature/AddFeature" class="btn btn-primary"> Yeni Öne Çıkan Bölümü Ekle</a>
                </div>
            </div>
        </div>
    </div>
</div>
