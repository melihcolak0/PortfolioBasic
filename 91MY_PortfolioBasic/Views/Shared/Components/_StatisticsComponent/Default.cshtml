<section id="stats" class="s-stats">
    <div class="row block-1-4 block-tab-1-2 block-mob-full stats">

        <div class="col-block stats__col ">
            <div class="stats__count">
                @ViewBag.totalExperience
            </div>
            <h4>Deneyim Süresi (Ay)</h4>
        </div>
        <div class="col-block stats__col">
            <div class="stats__count">
                @ViewBag.skillCount
            </div>
            <h4>Yetenek Sayısı</h4>
        </div>
        <div class="col-block stats__col">            
            <div class="stats__count">
                @ViewBag.portfolioCount
            </div>
            <h4>Proje Sayısı</h4>
        </div>
        <div class="col-block stats__col">
            <div class="stats__count">
                @ViewBag.socialMediaCount
            </div>
            <h4>Sosyal Medya Hesabı</h4>
        </div>

    </div>
</section> <!-- end s-stats -->