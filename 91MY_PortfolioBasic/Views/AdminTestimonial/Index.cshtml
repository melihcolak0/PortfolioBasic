@model List<Testimonial>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="container-fluid">
    <h4 class="page-title">Referanslar</h4>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <div class="card-title">Referanslar'ın Listelenmesi</div>
                </div>
                <div class="card-body">
                    <table class="table mt-3">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Adı ve Soyadı</th>
                                <th scope="col">Başlık</th>
                                <th scope="col">Sil</th>
                                <th scope="col">Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.TestimonialId</td>
                                    <td>@item.NameSurname</td>
                                    <td>@item.Title</td>
                                    <td><a href="/AdminTestimonial/DeleteTestimonial/@item.TestimonialId" class="btn btn-danger"> Sil</a></td>
                                    <td><a href="/AdminTestimonial/UpdateTestimonial/@item.TestimonialId" class="btn btn-warning"> Güncelle</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a href="/AdminTestimonial/AddTestimonial" class="btn btn-primary"> Yeni Referans Ekle</a>
                </div>
            </div>
        </div>
    </div>
</div>
