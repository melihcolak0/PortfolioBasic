@model Testimonial
@{
    ViewData["Title"] = "UpdateTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="container-fluid">
    <h4 class="page-title">Referanslar</h4>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <div class="card-title">Referans Güncelle</div>
                </div>
                <div class="card-body">
                    <form method="post">
                        <input type="hidden" class="form-control" asp-for="TestimonialId">
                        <div class="form-group">
                            <label>Adı ve Soyadı</label>
                            <input type="text" class="form-control" asp-for="NameSurname">
                        </div>
                        <div class="form-group">
                            <label>Başlık</label>
                            <input type="text" class="form-control" asp-for="Title">
                        </div>
                        <div class="form-group">
                            <label>Resim Url</label>
                            <input type="text" class="form-control" asp-for="ImageUrl">
                        </div>
                        <div class="form-group">
                            <label>Açıklama</label>
                            <textarea class="form-control" asp-for="Description" rows="5"></textarea>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-primary">Güncelle</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>