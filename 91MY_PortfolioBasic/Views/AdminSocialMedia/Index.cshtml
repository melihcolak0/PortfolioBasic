@model List<SocialMedia>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="container-fluid">
    <h4 class="page-title">Sosyal Medya</h4>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <div class="card-title">Sosyal Medyalar'ın Listelenmesi</div>
                </div>
                <div class="card-body">
                    <table class="table mt-3">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Sosyal Medya</th>
                                <th scope="col">Url</th>
                                <th scope="col">Sil</th>
                                <th scope="col">Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.SocialMediaId</td>
                                    <td>@item.Title</td>
                                    <td>@item.Url</td>
                                    <td><a href="/AdminSocialMedia/DeleteSocialMedia/@item.SocialMediaId" class="btn btn-danger"> Sil</a></td>
                                    <td><a href="/AdminSocialMedia/UpdateSocialMedia/@item.SocialMediaId" class="btn btn-warning"> Güncelle</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a href="/AdminSocialMedia/AddSocialMedia" class="btn btn-primary"> Yeni Sosyal Medya Hesabı Ekle</a>
                </div>
            </div>
        </div>
    </div>
</div>
