@model Skill
@{
    ViewData["Title"] = "AddSkill";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="container-fluid">
    <h4 class="page-title">Yetenekler</h4>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <div class="card-title">Yeni Yetenek Ekle</div>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="form-group">
                            <label>Yetenek</label>
                            <input type="text" class="form-control" asp-for="Title">
                        </div>
                        <div class="form-group">
                            <label>Değer</label>
                            <input type="text" class="form-control" asp-for="Value">
                        </div>                        
                        <div class="form-group">
                            <button class="btn btn-primary">Ekle</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
