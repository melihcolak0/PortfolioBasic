@model List<Skill>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}
@{
	int i = 0;
}
<div class="container-fluid">
	<h4 class="page-title">Dashboard</h4>
	<div class="row">
		<div class="col-md-3">
			<div class="card card-stats card-warning">
				<div class="card-body ">
					<div class="row">
						<div class="col-5">
							<div class="icon-big text-center">
								<i class="la la-lightbulb-o"></i>
							</div>
						</div>
						<div class="col-7 d-flex align-items-center">
							<div class="numbers">
								<p class="card-category">Yetenek Sayısı</p>
								<h4 class="card-title">@ViewBag.skillCount</h4>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="col-md-3">
			<div class="card card-stats card-success">
				<div class="card-body ">
					<div class="row">
						<div class="col-5">
							<div class="icon-big text-center">
								<i class="la la-envelope"></i>
							</div>
						</div>
						<div class="col-7 d-flex align-items-center">
							<div class="numbers">
								<p class="card-category">Toplam Mesaj Sayısı</p>
								<h4 class="card-title">@ViewBag.messageCount</h4>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="col-md-3">
			<div class="card card-stats card-danger">
				<div class="card-body">
					<div class="row">
						<div class="col-5">
							<div class="icon-big text-center">
								<i class="la la-check-square"></i>
							</div>
						</div>
						<div class="col-7 d-flex align-items-center">
							<div class="numbers">
								<p class="card-category">Okunmuş Mesaj Sayısı</p>
								<h4 class="card-title">@ViewBag.readMessageCount</h4>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="col-md-3">
			<div class="card card-stats card-primary">
				<div class="card-body ">
					<div class="row">
						<div class="col-5">
							<div class="icon-big text-center">
								<i class="la la-times-circle"></i>
							</div>
						</div>
						<div class="col-7 d-flex align-items-center">
							<div class="numbers">
								<p class="card-category">Okunmamış Mesaj Sayısı</p>
								<h4 class="card-title">@ViewBag.unreadMessageCount</h4>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-md-3">
			<div class="card">
				<div class="card-header">
					<h4 class="card-title">Yapılacaklar</h4>
					<p class="card-category">Tamamlanma Oranı</p>
				</div>
				<div class="card-body">
					<div id="task-complete" class="chart-circle mt-4 mb-3"></div>
				</div>
				<div class="card-footer">
					<div class="legend"><i class="la la-circle text-primary"></i> Tamamlandı</div>
				</div>
			</div>
		</div>
		<div class="col-md-9">
			<div class="card">
				<div class="card-header">
					<h4 class="card-title">Dünya Haritası</h4>
					<p class="card-category">
						Harita üzerinden ülkeleri inceleyebilirsiniz
					</p>
				</div>
				<div class="card-body">
					<div class="mapcontainer">
						<div class="map">
							<span>Harita için alternatif içerik</span>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="row row-card-no-pd">
		<div class="col-md-4">
			<div class="card">
				<div class="card-body">
					<p class="fw-bold mt-1">Yapılacaklar</p>
					<h4><b> @ViewBag.toDoListCount</b></h4>
					<a href="/AdminToDoList/Index" class="btn btn-primary btn-full text-left mt-3 mb-3"><i class="la la-plus"></i> Yeni Yapılacak Ekle</a>
				</div>
				<div class="card-footer">
					<ul class="nav">
						<li class="nav-item"><a class="btn btn-default btn-link" href="#"> Yapılan: @ViewBag.doneToDoListCount</a></li>
						<li class="nav-item ml-auto"><a class="btn btn-default btn-link" href="#"> Yapılmayan: @ViewBag.unDoneToDoListCount</a></li>
					</ul>
				</div>
			</div>
		</div>
		<div class="col-md-5">
			<div class="card">
				<div class="card-body">
					@foreach (var item in Model)
					{
						<div class="progress-card">
							<div class="d-flex justify-content-between mb-1">
								<span class="text-muted">@item.Title</span>
								<span class="text-muted fw-bold"> @item.Value</span>
							</div>
							<div class="progress mb-2" style="height: 7px;">
								<div class="progress-bar bg-warning" role="progressbar" style="width: @($"{item.Value}%")" aria-valuenow="@item.Value" aria-valuemin="0" aria-valuemax="100" data-toggle="tooltip" data-placement="top" title="@item.Value%"></div>
							</div>
						</div>
					}									
				</div>
			</div>
		</div>
		<div class="col-md-3">
			<div class="card card-stats">
				<div class="card-body">
					<p class="fw-bold mt-1">İstatistikler</p>
					<div class="row">
						<div class="col-5">
							<div class="icon-big text-center icon-warning">
								<i class="la la-pie-chart text-warning"></i>
							</div>
						</div>
						<div class="col-7 d-flex align-items-center">
							<div class="numbers">
								<p class="card-category">Proje Sayısı</p>
								<h4 class="card-title">@ViewBag.portfolioCount</h4>
							</div>
						</div>
					</div>
					<hr />
					<div class="row">
						<div class="col-5">
							<div class="icon-big text-center">
								<i class="la la-heart-o text-primary"></i>
							</div>
						</div>
						<div class="col-7 d-flex align-items-center">
							<div class="numbers">
								<p class="card-category">Refrans Sayısı</p>
								<h4 class="card-title">@ViewBag.testimonialCount</h4>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>	
</div>