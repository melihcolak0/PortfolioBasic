@model List<Portfolio>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="container-fluid">
    <h4 class="page-title">Portfolyo</h4>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <div class="card-title">Portfolyo Bilgileri'nin Listelenmesi</div>
                </div>
                <div class="card-body">
                    <table class="table mt-3">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Başlık</th>
                                <th scope="col">Alt Başlık</th>
                                <th scope="col">Url</th>
                                <th scope="col">Sil</th>
                                <th scope="col">Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.PortfolioId</td>
                                    <td>@item.Title</td>
                                    <td>@item.SubTitle</td>
                                    <td>@item.Url</td>
                                    <td><a href="/AdminPortfolio/DeletePortfolio/@item.PortfolioId" class="btn btn-danger"> Sil</a></td>
                                    <td><a href="/AdminPortfolio/UpdatePortfolio/@item.PortfolioId" class="btn btn-warning"> Güncelle</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a href="/AdminPortfolio/AddPortfolio" class="btn btn-primary"> Yeni Portfolyo Bilgisi Ekle</a>
                </div>
            </div>
        </div>
    </div>
</div>
